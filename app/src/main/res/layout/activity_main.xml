<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grad"
    tools:context=".MainActivity">

   <ImageView
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="100dp"
       app:srcCompat="@drawable/yulogo"/>

   <FrameLayout
       android:id="@+id/frame"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/LL_menu">
   </FrameLayout>

   <LinearLayout
       android:id="@+id/LL_menu"
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_margin="4dp"
       android:orientation="horizontal">

      <LinearLayout
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_margin="4dp"
          android:orientation="vertical">

         <Button
             android:id="@+id/btn_news"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="3"
             android:background="@drawable/ic_news" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:fontFamily="@font/msfont"

             android:gravity="center"
             android:lineSpacingExtra="5dp"
             android:maxLines="2"
             android:text="영대소식"
             android:textColor="@android:color/black" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_margin="4dp"
          android:orientation="vertical">

         <Button
             android:id="@+id/btn_info"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="3"
             android:background="@drawable/ic_calendar" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:fontFamily="@font/msfont"

             android:gravity="center"
             android:lineSpacingExtra="5dp"
             android:maxLines="2"
             android:text="학사안내"
             android:textColor="@android:color/black" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_margin="4dp"
          android:orientation="vertical">

         <Button
             android:id="@+id/btn_college"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="3"
             android:background="@drawable/ic_school" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:fontFamily="@font/msfont"

             android:gravity="center"
             android:lineSpacingExtra="5dp"
             android:maxLines="2"
             android:text="단과대학"
             android:textColor="@android:color/black" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_margin="4dp"
          android:orientation="vertical">

         <Button
             android:id="@+id/btn_st_council"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="3"
             android:background="@drawable/ic_st_council" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:fontFamily="@font/msfont"

             android:gravity="center"
             android:lineSpacingExtra="5dp"
             android:maxLines="2"
             android:text="총학생회"
             android:textColor="@android:color/black" />
      </LinearLayout>

   </LinearLayout>


</RelativeLayout>